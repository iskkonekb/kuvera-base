@{ Layout = "~/Areas/SiteAdmin/Views/Shared/_Empty_modal.cshtml";}
@model kuvera108.Areas.SiteAdmin.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Забыли пароль?";
}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new {role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Введите адрес электронной почты.</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <h5>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</h5>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <input type="submit" class="btn btn-success btn-success" value="Отправка ссылки по электронной почте" />
                <button id="btnCancel" type="button" class="btn btn-default" data-dismiss="modal" onclick="location.href='@ViewBag.ReturnUrl'">Отмена</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
