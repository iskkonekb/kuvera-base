@model kuvera108.Areas.SiteAdmin.Models.OrgUsersSearchAndCreateModel
@{
    Layout = null;
}
@Scripts.Render("~/bundles/jqueryval")
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Добавить пользователя в общество</h4>
        </div>
        @using (Ajax.BeginForm("Create", "OrgUsers", new { area = "SiteAdmin" }, new AjaxOptions { HttpMethod = "Post", OnSuccess = "CreateOrgUserSuccess" }, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.HiddenFor(x => x.Id)
                    @Html.HiddenFor(x => x.Owner)
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(x => x.Org_Id, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="control-group error">
                            @Html.ValidationMessageFor(x => x.Org_Id)
                        </div>
                        <div class='input-group'>
                            @Html.DropDownListFor(x => x.Org_Id, Model.OrgList, "Выберите общество", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.User_Email, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="control-group error">
                            @Html.ValidationMessageFor(x => x.User_Email)
                        </div>
                        <div class='input-group'>
                            @Html.TextBoxFor(x => x.User_Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default btn-success">Сохранить</button>
                        <button id="btnCancel" type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
