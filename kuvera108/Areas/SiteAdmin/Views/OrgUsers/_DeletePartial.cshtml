@model kuvera108.Areas.SiteAdmin.Models.OrgUsersViewModel
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Удалить пользователя из общества</h4>
            <h3>Вы уверены, что хотите удалить пользователя из @Html.DisplayFor(x => x.OrgName) ?</h3>

        </div>

        <div class="modal-body">
            <dl class="dl-horizontal">
                <dd>
                    @Html.DisplayFor(x => x.User_Name)
                </dd>
                <dd>
                    @Html.DisplayFor(x => x.User_FullName)
                </dd>
                <dd>
                    @Html.DisplayFor(x => x.User_Email)
                </dd>
            </dl>
            @using (Ajax.BeginForm("Delete", "OrgUsers", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "DeleteOrgUsersuccess" }, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-actions no-color">
                    @Html.HiddenFor(x => x.Id)
                    @Html.HiddenFor(x => x.Owner)
                    <input type="submit" value="Удалить ?" class="btn btn-success" />
                    <button id="btnCancel" type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
                </div>
            }
        </div>
    </div>
</div>

