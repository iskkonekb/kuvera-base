@model kuvera108.Areas.SiteAdmin.Models.Org
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Добавить общество</h4>
        </div>
        @using (Ajax.BeginForm("Create", "Orgs", new { area = "SiteAdmin" }, new AjaxOptions { HttpMethod = "Post", OnSuccess = "CreateOrgSuccess" }, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.Owner)
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(x => x.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="control-group error">
                            @Html.ValidationMessageFor(x => x.Name)
                        </div>
                        <div class='input-group'>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Descr, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="control-group error">
                            @Html.ValidationMessageFor(x => x.Descr)
                        </div>
                        <div class='input-group'>
                            @Html.TextBoxFor(x => x.Descr, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default btn-success">Сохранить</button>
                <button id="btnCancel" type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
            </div>
        }
    </div>
</div>
